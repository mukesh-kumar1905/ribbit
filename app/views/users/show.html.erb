<% if current_user %>
	<%= render 'ribbits/new_form' %>
<% end %>

<div id="ribbits" class="panel left">
	<h1>Ribbit Profile</h1>
	<div class="ribbitWrapper">
		<img src="<%= @user.avatar_url %>" class="avatar">
		<span class="name"><%= @user.name %></span>@<%= @user.username%>
		<p>
		<%= @user.ribbits.length  %> Ribbits
		<span class="spacing">
			<%= @user.followers.length%> Followers
		</span>
		<span class="spacing">
			<%= @user.followeds.length%> Following
		</span>
		<% if current_user and current_user != @user %>
			<% if current_user.following? @user %>
				<%= form_for @relationship ,method: :delete do |f|%>
					<%= f.submit "Unfollow"%>
				<%end %>
			<%else %>
				<%= form_for @relationship do |f|%>
					<%= f.hidden_field :followed_id, value:@user.id %>
					<%= f.submit "Follow"%>
				<%end %>
			<% end %>
		<% end %>
		</p>

	</div>
</div>
<div id="ribbits" class="panel left">
	<h1>Ribbits</h1>
	<% @user.ribbits.each do |ribbit| %>
	<div class="ribbitWrapper">
		<img src="<%= ribbit.user.avatar_url %>" class="avatar">
		<span class="name"><%= ribbit.user.name%></span>
		@<%=  ribbit.user.username %>
		<span class="time">
			<%= time_ago_in_words(ribbit.created_at ) %>
		</span>
		<p><%= ribbit.content%></p>
	</div>
	<%end%>
</div>
<%= javascript_include_tag "ribbits"%>